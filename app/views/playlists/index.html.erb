<div class="container">
  <%= simple_form_for(@playlist) do |f| %>
    <%= f.input :name, label: false, placeholder: "Create a new playlist", autofocus: true %>
    <%= f.submit "Create" %>
  <% end %>

  <% if @playlists.present? %>
    <div class="playlists">
      <% @playlists.each do |playlist| %>
        <div class="playlist">
          <div class="hover-btn">
            <div class="more">
              <%= link_to 'Go to playlist', playlist_path(playlist), class: 'btn-playlist' %>
            </div>
            <div class="delete">
              <%= button_to 'Delete',
                            playlist,
                            data: { confirm: 'Are you sure?' },
                            method: :delete,
                            class: 'playlist-btn' %>
            </div>
          </div>
          <p class="title"><%= playlist.name %></p>
          <div class="previews">
            <% playlist.tracks.take(4).each_with_index do |track, index| %>
              <div class="preview-container-<%= index %>">
                <%= image_tag(track.image_url) %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="blankslate">
      <%= image_tag 'hero.svg' %>
      <h2>Be a Hero, create your first playlist!</h2>
    </div>
  <% end %>
</div>
